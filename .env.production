# 🔐 Православный портал - Production Environment Variables

# 🗄️ Database Settings
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://pravoslavie_user:your_secure_postgres_password_here@postgres:5432/pravoslavie_portal_db

# 🔑 Django Security
SECRET_KEY=your_super_secret_django_key_here_generate_new_one
DEBUG=False
ALLOWED_HOSTS=pravoslavie-portal.ru,www.pravoslavie-portal.ru,localhost,127.0.0.1

# 🚀 Redis Cache
REDIS_URL=redis://redis:6379/0

# 📧 Email Settings
EMAIL_HOST=smtp.yandex.ru
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@yandex.ru
EMAIL_HOST_PASSWORD=your_email_password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@pravoslavie-portal.ru

# 🎬 YouTube API
YOUTUBE_API_KEY=your_youtube_api_key_here

# 💳 Payment Gateway (YooKassa)
YOOKASSA_SHOP_ID=your_yookassa_shop_id
YOOKASSA_SECRET_KEY=your_yookassa_secret_key
YOOKASSA_TEST_MODE=False

# 📊 Analytics
YANDEX_METRIKA_ID=your_metrika_id
GOOGLE_ANALYTICS_ID=your_ga_id

# 🔒 Security Headers
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# 📱 PWA Settings
PWA_SERVICE_WORKER_PATH=/sw.js

# 🌍 Internationalization
LANGUAGE_CODE=ru
TIME_ZONE=Europe/Moscow
USE_TZ=True

# 📁 File Storage
DEFAULT_FILE_STORAGE=django.core.files.storage.FileSystemStorage
STATICFILES_STORAGE=django.contrib.staticfiles.storage.StaticFilesStorage

# 🔍 Search
ELASTICSEARCH_URL=http://elasticsearch:9200

# 📊 Logging Level
LOG_LEVEL=INFO

# 🚨 Sentry (Error Monitoring)
SENTRY_DSN=your_sentry_dsn_here

# 🌐 CORS Settings
CORS_ALLOWED_ORIGINS=https://pravoslavie-portal.ru,https://www.pravoslavie-portal.ru

# 📱 PWA Manifest
PWA_APP_NAME=Православный портал
PWA_APP_DESCRIPTION=Духовные рассказы, книги и терапевтические сказки
PWA_APP_THEME_COLOR=#2B5AA0
PWA_APP_BACKGROUND_COLOR=#FEFEFE

# 🎯 Feature Flags
ENABLE_ANALYTICS=True
ENABLE_PWA=True
ENABLE_NOTIFICATIONS=True
ENABLE_YOOKASSA=True
