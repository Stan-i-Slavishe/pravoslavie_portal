# Легковесные настройки для разработки
SECRET_KEY=django-insecure-your-secret-key-here-for-development
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite для разработки)
DB_ENGINE=django.db.backends.sqlite3

# Отключаем Redis для экономии ресурсов
REDIS_URL=

# Celery в синхронном режиме
CELERY_TASK_ALWAYS_EAGER=True

# Email в консоль (быстрее)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Отключаем социальные сети для экономии
GOOGLE_OAUTH2_CLIENT_ID=
GOOGLE_OAUTH2_SECRET=

# Минимальное логирование
LOG_LEVEL=WARNING