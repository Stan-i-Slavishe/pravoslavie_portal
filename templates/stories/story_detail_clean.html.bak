{% block extra_js %}
<script>
// JavaScript –¥–ª—è –∏–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω–æ—Å—Ç–∏ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
document.addEventListener('DOMContentLoaded', function() {
    console.log('üì± –°—Ç—Ä–∞–Ω–∏—Ü–∞ —Ä–∞—Å—Å–∫–∞–∑–∞ –∑–∞–≥—Ä—É–∂–µ–Ω–∞ - –ß–ò–°–¢–ê–Ø –í–ï–†–°–ò–Ø');
});

// –§—É–Ω–∫—Ü–∏—è –ª–∞–π–∫–∞ —Ä–∞—Å—Å–∫–∞–∑–∞
function toggleLike(storyId) {
    {% if user.is_authenticated %}
        const csrfToken = document.querySelector('[name=csrfmiddlewaretoken]').value;
        
        fetch('/stories/' + storyId + '/like/', {
            method: 'POST',
            headers: {
                'X-CSRFToken': csrfToken,
                'Content-Type': 'application/json',
            },
        })
        .then(response => response.json())
        .then(data => {
            if (data.status === 'success') {
                const likeBtn = document.querySelector('.action-btn');
                const likeIcon = likeBtn.querySelector('i');
                const likeCount = document.getElementById('like-count');
                
                if (data.liked) {
                    likeBtn.classList.add('liked');
                    likeIcon.classList.add('bi-heart-fill');
                    likeIcon.classList.remove('bi-heart');
                } else {
                    likeBtn.classList.remove('liked');
                    likeIcon.classList.add('bi-heart');
                    likeIcon.classList.remove('bi-heart-fill');
                }
                
                likeCount.textContent = '(' + data.likes_count + ')';
            }
        })
        .catch(err => console.error('Like error:', err));
    {% else %}
        window.location.href = "{% url 'account_login' %}";
    {% endif %}
}

// –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ –±–ª–æ–∫–∞ –ø–æ–¥–µ–ª–∏—Ç—å—Å—è
function toggleShareSection() {
    const shareSection = document.getElementById('shareSection');
    
    if (shareSection.style.display === 'none' || shareSection.style.display === '') {
        shareSection.style.display = 'block';
        setTimeout(() => {
            shareSection.scrollIntoView({
                behavior: 'smooth',
                block: 'nearest'
            });
        }, 100);
    } else {
        shareSection.style.display = 'none';
    }
}

// –ö–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ —Å—Å—ã–ª–∫–∏ –≤ –±—É—Ñ–µ—Ä –æ–±–º–µ–Ω–∞
function copyToClipboard() {
    const url = window.location.href;
    
    if (navigator.clipboard) {
        navigator.clipboard.writeText(url).then(() => {
            showToast('–°—Å—ã–ª–∫–∞ —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∞ –≤ –±—É—Ñ–µ—Ä –æ–±–º–µ–Ω–∞!', 'success');
        }).catch(() => {
            fallbackCopyToClipboard(url);
        });
    } else {
        fallbackCopyToClipboard(url);
    }
}

// –ó–∞–ø–∞—Å–Ω–æ–π –º–µ—Ç–æ–¥ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è
function fallbackCopyToClipboard(text) {
    const textArea = document.createElement('textarea');
    textArea.value = text;
    textArea.style.position = 'fixed';
    textArea.style.opacity = '0';
    document.body.appendChild(textArea);
    textArea.focus();
    textArea.select();
    
    try {
        document.execCommand('copy');
        showToast('–°—Å—ã–ª–∫–∞ —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∞!', 'success');
    } catch (err) {
        showToast('–û—à–∏–±–∫–∞ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è. –°–∫–æ–ø–∏—Ä—É–π—Ç–µ —Å—Å—ã–ª–∫—É –≤—Ä—É—á–Ω—É—é.', 'error');
    }
    
    document.body.removeChild(textArea);
}

// –î–æ–±–∞–≤–ª–µ–Ω–∏–µ —Ä–∞—Å—Å–∫–∞–∑–∞ –≤ –ø–ª–µ–π–ª–∏—Å—Ç
function addToPlaylist(storyId, playlistId) {
    {% if user.is_authenticated %}
        const csrfToken = document.querySelector('[name=csrfmiddlewaretoken]').value;
        
        fetch('{% url "stories:add_to_playlist" %}', {
            method: 'POST',
            headers: {
                'X-CSRFToken': csrfToken,
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                'story_id': storyId,
                'playlist_id': playlistId
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showToast(data.message, 'success');
                setTimeout(() => {
                    window.location.reload();
                }, 1000);
            } else {
                showToast(data.message, 'error');
            }
        })
        .catch(err => {
            console.error('Playlist add error:', err);
            showToast('–û—à–∏–±–∫–∞ –ø—Ä–∏ –¥–æ–±–∞–≤–ª–µ–Ω–∏–∏ –≤ –ø–ª–µ–π–ª–∏—Å—Ç', 'error');
        });
    {% else %}
        window.location.href = "{% url 'account_login' %}";
    {% endif %}
}

// –£–¥–∞–ª–µ–Ω–∏–µ —Ä–∞—Å—Å–∫–∞–∑–∞ –∏–∑ –ø–ª–µ–π–ª–∏—Å—Ç–∞
function removeFromPlaylist(storyId, playlistId) {
    {% if user.is_authenticated %}
        const csrfToken = document.querySelector('[name=csrfmiddlewaretoken]').value;
        
        fetch('{% url "stories:remove_from_playlist" %}', {
            method: 'POST',
            headers: {
                'X-CSRFToken': csrfToken,
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                'story_id': storyId,
                'playlist_id': playlistId
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showToast(data.message, 'success');
                setTimeout(() => {
                    window.location.reload();
                }, 1000);
            } else {
                showToast(data.message, 'error');
            }
        })
        .catch(err => {
            console.error('Playlist remove error:', err);
            showToast('–û—à–∏–±–∫–∞ –ø—Ä–∏ —É–¥–∞–ª–µ–Ω–∏–∏ –∏–∑ –ø–ª–µ–π–ª–∏—Å—Ç–∞', 'error');
        });
    {% else %}
        window.location.href = "{% url 'account_login' %}";
    {% endif %}
}

// –£–Ω–∏–≤–µ—Ä—Å–∞–ª—å–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–π
function showToast(message, type = 'info') {
    const toastContainer = document.getElementById('toast-container') || createToastContainer();
    
    const toast = document.createElement('div');
    toast.className = `alert alert-${type === 'success' ? 'success' : type === 'error' ? 'danger' : 'info'} alert-dismissible fade show`;
    toast.style.cssText = 'position: fixed; top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
    
    toast.innerHTML = `
        ${message}
        <button type="button" class="btn-close" onclick="this.parentElement.remove()"></button>
    `;
    
    toastContainer.appendChild(toast);
    
    setTimeout(() => {
        if (toast.parentElement) {
            toast.remove();
        }
    }, 3000);
}

function createToastContainer() {
    const container = document.createElement('div');
    container.id = 'toast-container';
    container.style.cssText = 'position: fixed; top: 0; right: 0; z-index: 9999; padding: 20px;';
    document.body.appendChild(container);
    return container;
}
</script>
{% endblock %}